# Frontend Environment Variables
# Copy this file to .env and fill in your values
# Note: All Vite env vars must be prefixed with VITE_

# ===========================================
# API Configuration
# ===========================================

# Backend API URL
# Local development (using Vite proxy):
VITE_API_URL=/api

# Direct backend URL (if not using proxy):
# VITE_API_URL=http://localhost:8000/api

# Production examples:
# VITE_API_URL=https://api.yourapp.com/api
# VITE_API_URL=https://api-staging.yourapp.com/api

# ===========================================
# OPTIONAL
# ===========================================

# Environment name (for debugging)
VITE_ENV=development
