# Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED
# ===========================================

# OpenAI API Key for generating examples
OPENAI_API_KEY=sk-your-api-key-here

# ===========================================
# DATABASE
# ===========================================

# Local development (SQLite - default)
DATABASE_URL=sqlite:///./leveling_guide.db

# Production (PostgreSQL) - uncomment and set:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# PostgreSQL examples for popular providers:
# - Railway:   postgresql://postgres:PASSWORD@HOST:PORT/railway
# - Render:    postgresql://user:PASSWORD@HOST:5432/dbname
# - Supabase:  postgresql://postgres:PASSWORD@HOST:5432/postgres
# - Neon:      postgresql://user:PASSWORD@HOST.neon.tech/dbname?sslmode=require
# - Docker:    postgresql://postgres:postgres@db:5432/leveling_guide

# ===========================================
# CORS / FRONTEND
# ===========================================

# Frontend URL for CORS (comma-separated for multiple)
FRONTEND_URL=http://localhost:5173

# Production examples:
# FRONTEND_URL=https://yourapp.com
# FRONTEND_URL=https://staging.yourapp.com

# ===========================================
# OPTIONAL
# ===========================================

# Environment name (development, staging, production)
ENV=development
